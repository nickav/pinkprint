{
  "name": "pinkprint",
  "version": "1.0.0",
  "description": "command-line tool for generating files",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules --es-module-specifier-resolution=node bin/pink",
    "format": "yarn f $(git ls-files -c -m | grep '\\.\\(jsx\\?\\|json\\|scss\\)$' | tr '\n' ' ')",
    "f": "node_modules/.bin/prettier --config package.json --write",
    "g": "bin/pink g",
    "precommit": "lint-staged",
    "publish": "np"
  },
  "bin": {
    "pink": "bin/pink"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickav/pinkprint.git"
  },
  "author": "Nick Aversano",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "async": "^2.3.0",
    "chalk": "^1.1.3",
    "colors": "^1.1.2",
    "helper-date": "^0.2.3",
    "humps": "^2.0.0",
    "pluralize": "^8.0.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,scss}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
